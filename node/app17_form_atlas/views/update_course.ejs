<!DOCTYPE html>
<html lang="en">

<head>

    <title>Document</title>
</head>
<style>
    form {
        margin: 0% 5% 5% 5%;
        padding: 0% 5% 5% 5%;
        border: 2px solid black;
    }

    .box {
        text-align: center;
        display: flex;
    }

    #info {
        margin-left: 5%;
    }
</style>

<body>

    <h1> Skill Qode </h1>
    <!-- main -->
    <div id="header" style="text-align: center;">
        <h1>Update Courses </h1>
        <div class="box">
            <div id="info">Date : <span id="date"></span> </div>
        </div><br>
        <hr><br>
    </div>
    <a href="/">All course</a>
    <!-- main -->
    <form method="post" >

        <input type="hidden" name="id" value="<%=cours._id%>" placeholder="Enter course name">
        <div id="info">Course Name :
            <input type="text" name="coursename" value="<%=cours.coursename%>" placeholder="Enter course name">
        </div><br>
    
        <div id="info">Description :
            <input type="text" name="description" value="<%=cours.description%>" placeholder="Enter description">
        </div><br>
    
        <div id="info">prerequisite : 10th<input name="prerequisite.ssc" value="true" type="checkbox">
            12th<input name="prerequisite.hsc" value="true" type="checkbox">
            Bachelor<input name="prerequisite.bachelor" value=true type="checkbox"></div><br>
    
        <div id="info">Duration :
            <input type="number" name="duration" value="<%=cours.duration%>" placeholder="Enter duration (in mounth)">
        </div><br>
        
        <div id="info">Fees :
            <input type="number" name="fees" value="<%=cours.fees%>" placeholder="Enter fees">
        </div><br>
        <input id="info" type="submit" value="Submit"><br>
        
    </form>
    <!-- /main -->

</body>
<script>

    function myDate() {
        const nowDate = new Date;
        const date = nowDate.getDate();
        const month = nowDate.getMonth() + 1;
        const year = nowDate.getFullYear();
        const retDate = `${date}/${month}/${year}`;
        return retDate;
    }
    document.getElementById("date").innerHTML = `${myDate()}`
    console.log(myDate())
</script>

</html>