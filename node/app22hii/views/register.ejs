</style>

<body>
    <%-include('./include/navbar.ejs')%>

    <h1> Skill Qode </h1>
    <form id="myform" method="post" action="/submitUser">
        <div id="header" style="text-align: center;">
            <h1> Inquiry Form </h1>
            <div class="box">
                <div id="info">Date : <span id="date"></span> </div>
            </div><br>
            <hr><br>
        </div>

        <div class="box">
            <div id="info">First name:
                <input type="text" name="fname" placeholder="John">
            </div>

            <div id="info">Last name:
                <input type="text" name="lname" placeholder="Doe">
            </div>
        </div><br>

        <!-- <button type="submit">Login</button> -->

        <div class="box">
            <div id="info">DOB.
                <input type="date" name="dob" placeholder="Date of birth">
            </div><br>

            <div id="info">Contact no.
                <input type="number" name="contact" placeholder="mobile_no">
            </div>
        </div><br>

        <div id="info">Gender : Male <input type="radio" name="gender" value="male"> Female <input type="radio"
                name="gender" value="female"><br></div>

        <div id="info">e-mail id
            <input type="email" name="email" placeholder="E-mail id">
        </div><br>

        <div id="info">password
            <input type="password" name="password" placeholder="Enter password ">
        </div><br>

        <div id="info">conform password
            <input type="password" name="cpassword" placeholder="Enter cpassword ">
        </div><br>

        <input id="info" type="submit" value="Submit">

    </form>
</body>
<script>

    function myDate() {
        const nowDate = new Date;
        const date = nowDate.getDate();
        const month = nowDate.getMonth() + 1;
        const year = nowDate.getFullYear();
        const retDate = `${date}/${month}/${year}`;
        return retDate;
    }
    document.getElementById("date").innerHTML = `${myDate()}`
    console.log(myDate())
</script>
